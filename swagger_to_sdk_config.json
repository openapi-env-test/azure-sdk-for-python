{
  "advancedOptions": {
    "createSdkPullRequests": true,
    "generationCallMode": "one-for-all-configs"
  },

  "initOptions": {
    "initScript": {
      "path": "python3 -m venv ../venv && source ../venv/Scripts/activate && python scripts/automation_init.py "
    }
  },

  "generateOptions": {
    "generateScript": {
      "path": "python -m packaging_tools.generate_script_v2",
      "stderr": {
        "showInComment": true
      },
      "stdout": {
        "showInComment": "^\\[Autorest\\]"
      }
    },

    "parseGenerateOutput": true
  }
}